#include <stdio.h>
#include <stdlib.h>

int inner_product(int *a, int *b, int n);

int main(){

     int n;
     int *a,*b;
     int result;

     printf("How many elements you want to store (n)?");
     scanf("%d",&n);

     a= malloc(sizeof (int *)*n);
     b= malloc(sizeof (int *)*n);
     if(a==NULL && b==NULL){
         printf("error creating the array!");
         exit(1);
     }

     for(int i=0;i<n;i++){
         printf("Enter a value to be stored in the first array:");
         scanf("%d",&(*(a+i)));
     }
     for(int i=0;i<n;i++){
         printf("Enter a value to be stored in the second array: ");
         scanf("%d",&(*(b+i)));
     }

     printf("First array:");
     for(int i=0;i<n;i++){
         printf(" a[%d]: %d\t",i,*(a+i));
     }
     printf("\n");

     printf("Second array:");
     for(int i=0;i<n;i++){
         printf(" b[%d]: %d\t",i,*(b+i));
     }
     printf("\n");

     result= inner_product(a,b,n);
     printf("Result of inner product is: %d",result);

     free(a);
     free(b);
     return 0;
}
int inner_product(int *a, int *b, int n){

     int result=0;

     for(int i=0;i<n;i++){
         result+=(*(a+i))*(*(b+i));
     }

     return result;
}
