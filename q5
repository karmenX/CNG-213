#include <stdio.h>
#include <math.h>

int main() {
    int x1,y1,x2,y2;
    float distance;
     printf("Please enter the number of x1:");
     scanf("%d",&x1);
     printf("Please enter the number of y1: ");
     scanf("%d",&y1);
     printf("Please enter the number of x2: ");
     scanf("%d",&x2);
     printf("Please enter the number of y2: ");
     scanf("%d",&y2);
     distance= sqrt((pow((x1-x2),2))+ pow((y1-y2),2));
     printf("the distance is %3.2f",distance);

     return 0;
}
