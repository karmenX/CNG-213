#include <stdio.h>
#include <math.h>

int main() {
     float a, b, c;
     double s;
     printf("please enter a: ");
     scanf("%f",&a);
     printf("please enter b: ");
     scanf("%f",&b);
     printf("please enter c: ");
     scanf("%f",&c);
     s= (a+b+c)/2;
     float area, temp;
     printf("the s is : %.2f\n",s);
     temp=(s*(s-a)*(s-b)*(s-c));
     printf(" temp is %.2f \n",temp);
     area= sqrt(temp);
     printf("the area is: %3.2f \n",area);


     return 0;
}
