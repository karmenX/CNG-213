#include <stdio.h>
#include <math.h>

int main() {
     float a=2, b=3, c=4;
     double s;
     s= (a+b+c)/2;
     float area, temp;
     printf("the s is : %.2f\t",s);
     temp=(s*(s-2)*(s-3)*(s-4));
     printf("%2.f \t",temp);
     area= sqrt(temp);
     printf("the area is: %.2f \t",area);


     return 0;
}
