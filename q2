#include <stdio.h>
#include <math.h>

int main() {
     int r,n,p,y;
     printf("Please enter the number of r:");
     scanf("%d",&r);
     printf("Please enter the number of n: ");
     scanf("%d",&n);
     printf("Please enter the number of p: ");
     scanf("%d",&p);
     y=p*pow(1+r,n);
     printf("The y value is : %d ",y);


     return 0;
}
